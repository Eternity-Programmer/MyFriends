<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:p1="http://schemas.android.com/apk/res/android"
    p1:orientation="horizontal"
    p1:layout_width="match_parent"
    p1:layout_height="wrap_content"
    p1:id="@+id/linearLayout1">
	<LinearLayout
        p1:orientation="vertical"
        p1:layout_width="1dp"
        p1:layout_height="match_parent"
        p1:id="@+id/linearLayout2"
        p1:layout_weight="1">
		<TextView
            p1:textAppearance="?android:attr/textAppearanceLarge"
            p1:layout_width="match_parent"
            p1:layout_height="wrap_content"
            p1:id="@+id/lblName"
            p1:gravity="center"
            p1:layout_margin="3dp" />
		<TextView
            p1:textAppearance="?android:attr/textAppearanceMedium"
            p1:layout_width="match_parent"
            p1:layout_height="wrap_content"
            p1:id="@+id/lblEmail"
            p1:layout_margin="3dp" />
		<TextView
            p1:textAppearance="?android:attr/textAppearanceSmall"
            p1:layout_width="match_parent"
            p1:layout_height="wrap_content"
            p1:id="@+id/lblPhone"
            p1:layout_margin="3dp" />
	</LinearLayout>
	<LinearLayout
        p1:orientation="horizontal"
        p1:minWidth="25px"
        p1:minHeight="25px"
        p1:layout_width="wrap_content"
        p1:layout_height="match_parent"
        p1:id="@+id/linearLayout3"
        p1:gravity="center">
		<ImageView
            p1:layout_width="50dp"
            p1:layout_height="50dp"
            p1:id="@+id/img"
            p1:layout_margin="5dp" />
	</LinearLayout>
</LinearLayout>